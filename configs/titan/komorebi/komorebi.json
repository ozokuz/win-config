{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.29/schema.json",
  "animation": {
    "enabled": true,
    "duration": 100
  },
  "app_specific_configuration_path": "$Env:USERPROFILE/.config/komorebi/applications.yaml",
  "border": true,
  "border_colours": {
    "single": "#00FFFF"
  },
  "border_implementation": "Windows",
  "border_width": 2,
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 4,
  "default_container_padding": 4,
  "window_hiding_behaviour": "Cloak",
  "mouse_follows_focus": false,
  "focus_follows_mouse": "Windows",
  "manage_rules": [
    {
      "kind": "Exe",
      "id": "WaveLink.exe",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1-1",
          "layout": "BSP"
        },
        {
          "name": "1-2",
          "layout": "BSP"
        },
        {
          "name": "1-3",
          "layout": "BSP"
        },
        {
          "name": "1-4",
          "layout": "BSP"
        },
        {
          "name": "1-5",
          "layout": "BSP"
        },
        {
          "name": "1-6",
          "layout": "BSP"
        }
      ]
    },
    {
      "workspaces": [
        {
          "name": "2-1",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "id": "Discord.exe",
              "kind": "Exe"
            }
          ]
        },
        {
          "name": "2-2",
          "layout": "BSP"
        },
        {
          "name": "2-3",
          "layout": "BSP"
        },
        {
          "name": "2-4",
          "layout": "BSP"
        },
        {
          "name": "2-5",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "id": "WhatsApp",
              "kind": "Title"
            }
          ]
        },
        {
          "name": "2-6",
          "layout": "BSP",
          "initial_workspace_rules": [
            {
              "id": "Spotify.exe",
              "kind": "Exe"
            }
          ]
        }
      ]
    }
  ]
}
